{
  "name": "universal-twobyte",
  "packageManager": "yarn@4.1.1",
  "type": "module",
  "workspaces": [
    "packages/*",
    "services/*",
    "tools/*"
  ],
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "scripts": {
    "start": "yarn workspace @psi/twobyte run start",
    "deploy": "yarn workspace @psi/twobyte run deploy",
    "build": "yarn workspace @psi/dynamic-dockerfiles run build",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
